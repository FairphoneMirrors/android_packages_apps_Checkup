<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/main_padding_small"
    tools:context=".ModuleChooser">

    <ImageView
        android:id="@+id/modulePicture"
        android:layout_width="@dimen/header_big_height"
        android:layout_height="@dimen/header_big_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/main_margin_small"
        android:src="@drawable/display_module" />

    <TextView
        android:id="@+id/moduleName"
        style="@style/TextRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/modulePicture"
        android:text="@string/large_text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/moduleDescription"
        style="@style/TextLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/moduleName"
        android:layout_toEndOf="@+id/modulePicture"
        android:text="@string/small_text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
