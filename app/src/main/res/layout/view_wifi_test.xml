        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/not_available"
        android:id="@+id/wifi_dns_2_value"
        android:layout_alignBottom="@id/tvDns2"
        android:layout_toEndOf="@id/tvDns2" />

    <TextView
        android:id="@+id/tvDhcpLease"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="@string/wifi_dhcp_lease"
        android:layout_below="@id/tvDns2"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/not_available"
        android:id="@+id/wifi_dhcp_lease_value"
        android:layout_alignBottom="@id/tvDhcpLease"
        android:layout_toEndOf="@id/tvDhcpLease" />

    <TextView
        android:id="@+id/tvHiddenSsid"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="@string/wifi_hidden_ssid"
        android:layout_below="@id/tvDhcpLease"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/not_available"
