<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_big_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/modulePicture"
            android:layout_width="@dimen/header_big_height"
            android:layout_height="@dimen/header_big_height"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/main_margin_small"
            android:src="@drawable/display_module" />

        <TextView
            android:id="@+id/textView5"
            style="@style/TextRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/moduleName"
            android:layout_toEndOf="@+id/modulePicture"
            android:text="@string/tests_for"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/moduleName"
            style="@style/TextRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/modulePicture"
            android:text="@string/large_text"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:layout_gravity="center_horizontal" />
</RelativeLayout>
